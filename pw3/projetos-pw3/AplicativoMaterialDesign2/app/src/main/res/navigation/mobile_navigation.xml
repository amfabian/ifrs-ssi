<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="br.edu.ifrs.pw3.aplicativomaterialdesign2.fragments.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/nav_share"
        android:name="br.edu.ifrs.pw3.aplicativomaterialdesign2.fragments.ShareFragment"
        android:label="@string/menu_share"
        tools:layout="@layout/fragment_share" />
    <fragment
        android:id="@+id/nav_cadastrarFragment"
        android:name="br.edu.ifrs.pw3.aplicativomaterialdesign2.fragments.CadastrarFragment"
        android:label="CadastrarFragment"
        tools:layout="@layout/fragment_cadastrar"/>

    <fragment
        android:id="@+id/nav_test"
        android:name="br.edu.ifrs.pw3.aplicativomaterialdesign2.fragments.TestFragment"
        android:label="TestFragment"
        tools:layout="@layout/fragment_test"/>

    <fragment
        android:id="@+id/nav_listarFragment"
        android:name="br.edu.ifrs.pw3.aplicativomaterialdesign2.fragments.ListarFragment"
        android:label="ListarFragment"
        tools:layout="@layout/fragment_listar">
        <action
            android:id="@+id/action_listarFragment_to_editarFragment"
            app:destination="@id/editarFragment" />
    </fragment>
    <fragment
        android:id="@+id/editarFragment"
        android:name="br.edu.ifrs.pw3.aplicativomaterialdesign2.fragments.EditarFragment"
        android:label="EditarFragment"
        tools:layout="@layout/fragment_editar"/>
    <fragment
        android:id="@+id/bottomnavcad"
        android:name="br.edu.ifrs.pw3.aplicativomaterialdesign2.fragments.CadastrarFragment"
        android:label="CadastrarFragment"
        tools:layout="@layout/fragment_cadastrar"/>
    <fragment
        android:id="@+id/bottomnavlist"
        android:name="br.edu.ifrs.pw3.aplicativomaterialdesign2.fragments.ListarFragment"
        android:label="ListarFragment"
        tools:layout="@layout/fragment_listar">
        <action
            android:id="@+id/action_listarFragment_to_editarFragment"
            app:destination="@id/editarFragment" />
    </fragment>
</navigation>